<resources>
    <!-- Định nghĩa Theme.CustomViewsUI -->
    <style name="Theme.CustomViewsUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Tùy chỉnh màu sắc, phông chữ và các thuộc tính khác của Theme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Các thuộc tính khác -->
    </style>
    <!-- Style cho Button tùy chỉnh -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>

